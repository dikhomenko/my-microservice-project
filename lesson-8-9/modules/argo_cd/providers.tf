# Terraform and Provider version requirements for Argo CD module

terraform {
  required_version = ">= 1.0"
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
    kubernetes = {
      source  = "hashicorp/kubernetes"
      version = "~> 2.23"
    }
    helm = {
      source  = "hashicorp/helm"
      version = "~> 2.11"
    }
  }
}

# Note: Providers are configured in the root module (main.tf) due to  the error:
# "Provider configuration not present"
# and inherited by this module automatically
